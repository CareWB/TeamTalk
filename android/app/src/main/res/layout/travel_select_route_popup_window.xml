<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal|bottom"
    android:id="@+id/ly_create_travel_route_pop"
    android:background="@color/translucent"
    android:orientation="vertical">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_travel_route_literature"
        android:background="@drawable/create_travel_route_literature"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_travel_route_comfort"
        android:background="@drawable/create_travel_route_comfort"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_travel_route_exploration"
        android:background="@drawable/create_travel_route_exploration"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/create_travel_route_excite"
        android:background="@drawable/create_travel_route_excite"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/create_travel_route_encounter"
        android:background="@drawable/create_travel_route_encounter"/>

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:id="@+id/create_travel_route_cancel"
        android:background="@drawable/create_travel_cancel"/>

</LinearLayout>
