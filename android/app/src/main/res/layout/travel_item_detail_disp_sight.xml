<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_detail_disp_sight">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/detail_disp_sight_point"
        android:layout_marginTop="@dimen/detail_disp_top"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/detail_disp_sight_point" />

    <FrameLayout
        android:layout_width="@dimen/detail_disp_sight_width"
        android:layout_height="@dimen/detail_disp_sight_height"
        android:layout_centerVertical="true"
        android:layout_marginTop="@dimen/detail_disp_top"
        android:layout_toEndOf="@+id/detail_disp_sight_point">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/detail_disp_sight_bk"/>

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/detail_disp_sight_pad"
            android:layout_marginTop="@dimen/detail_disp_sight_pad"
            android:textSize="@dimen/title_size"
            android:textColor="@color/base_title"
            android:layout_gravity="top|left"
            android:drawableLeft="@drawable/detail_disp_sight_log"
            android:drawablePadding="@dimen/select_place_city_pic_left"
            android:id="@+id/detail_disp_sight_title" />

        <TextView
            android:text=""
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/detail_disp_sight_pad"
            android:layout_marginBottom="@dimen/detail_disp_sight_pad"
            android:textSize="@dimen/title_size"
            android:textColor="@color/base_title"
            android:layout_gravity="bottom"
            android:id="@+id/detail_disp_sight_content" />
    </FrameLayout>
</RelativeLayout>