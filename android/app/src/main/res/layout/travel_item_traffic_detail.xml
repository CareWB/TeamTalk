<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/rl_traffic_list" >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="12:03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/traffic_detail_start_time" />

                <TextView
                    android:text="宝安T3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/traffic_detail_start_station" />
            </LinearLayout>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <TextView
                    android:text="14:36"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/traffic_detail_end_time" />

                <TextView
                    android:text="高崎T4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/traffic_detail_end_station" />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:text="厦航MF8069|波音738（中）"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/traffic_list_no" />
    </LinearLayout>

    <TextView
        android:text="￥730"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/traffic_detail_price" />

    <TextView
        android:text="经济舱"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:id="@+id/traffic_detail_seat_type"
        android:layout_below="@+id/traffic_detail_price" />

</RelativeLayout>