<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/plane_black"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true"
        android:id="@+id/detail_disp_center" />

    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/detail_disp_left"
        android:layout_centerVertical="true"
        android:layout_toStartOf="@+id/detail_disp_center"
        android:layout_marginEnd="16dp">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/gulangyu"
                android:id="@+id/detail_disp_left_pic" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/detail_disp_left_title" />
        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/detail_disp_right"
        android:layout_alignTop="@+id/detail_disp_left"
        android:layout_toEndOf="@+id/detail_disp_center"
        android:layout_marginStart="24dp">

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:srcCompat="@drawable/gulangyu"
                android:id="@+id/detail_disp_right_pic" />

            <TextView
                android:text="TextView"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:id="@+id/detail_disp_right_title" />
        </LinearLayout>

    </android.support.v7.widget.CardView>
</RelativeLayout>