<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_select_sight"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/specific_time"
            android:layout_weight="1" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/comfort_degree"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Spinner
            android:id="@+id/spinner_sight"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@color/default_bk"
            android:spinnerMode="dropdown" />

        <TextView
            android:text="全部"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_all"
            android:layout_weight="1" />

        <TextView
            android:text="自然"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_nature"
            android:layout_weight="1" />

        <TextView
            android:text="历史"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_history"
            android:layout_weight="1" />

        <TextView
            android:text="文娱"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_entertainment"
            android:layout_weight="1" />

        <TextView
            android:text="建筑"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/select_building"
            android:layout_weight="1" />
    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_sight"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"/>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <Button
            android:text="智能选择"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sight_intelligence_select"
            android:layout_weight="1" />

        <Button
            android:text="下一步"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/sight_next"
            android:layout_weight="1" />
    </LinearLayout>

</LinearLayout>