<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ly_sight"
        android:gravity="center_vertical">

        <ImageView
            android:layout_width="91dp"
            android:layout_height="91dp"
            android:id="@+id/sight_pic" />

        <LinearLayout
            android:orientation="vertical"
            android:layout_width="120dp"
            android:layout_height="match_parent">

            <TextView
                android:text="厦门大学"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/travel_menu_text"
                android:id="@+id/sight_name" />

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RatingBar
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    style="@style/starRatingBar"
                    android:id="@+id/sight_star"
                    android:maxHeight="12dp"
                    android:minHeight="12dp"
                    android:isIndicator="true" />

                <TextView
                    android:text="(2345)"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/travel_menu_text"
                    android:id="@+id/sight_focus_num" />
            </LinearLayout>

            <TextView
                android:text="建筑 文化"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/travel_menu_text"
                android:id="@+id/sight_tag" />

            <RelativeLayout
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/sight_free"
                    android:background="@drawable/no_ticket"
                    android:layout_alignParentLeft="true"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/must_go"
                    android:background="@drawable/must_go"
                    android:layout_alignParentRight="true"/>
            </RelativeLayout>
        </LinearLayout>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/sight_selected"
            android:id="@+id/sight_select" />

    </LinearLayout>
</LinearLayout>