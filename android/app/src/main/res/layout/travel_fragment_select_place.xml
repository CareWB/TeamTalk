<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">


    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:background="@drawable/select_place_left">

        <TextView
            android:text="热门"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/select_place_hot"
            android:gravity="center"
            android:layout_weight="1" />

        <TextView
            android:text="全国"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:id="@+id/select_place_nation"
            android:gravity="center"
            android:layout_weight="1" />
    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_hot"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />
    </FrameLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:background="@drawable/select_city_result_bk">

        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/rv_select_place_result"
            android:layout_weight="1" />

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/select_place_ok"
            android:layout_gravity="center_vertical"
            android:id="@+id/ibn_select_place_ok" />
    </LinearLayout>

</LinearLayout>