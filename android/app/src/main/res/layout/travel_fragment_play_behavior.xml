<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/default_bk">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="旅行指数-目的地"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_black_color" />


        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <Button
                android:text="经济高效游"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/economical_efficiency"
                android:textColor="@color/default_black_color"
                android:background="@drawable/travel_behavior_not_click" />

            <Button
                android:text="经济舒适游"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/economical_comfort"
                android:textColor="@color/travel_menu_bk"
                android:background="@drawable/travel_behavior_click" />

            <Button
                android:text="奢华品质游"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/luxury_quality"
                android:textColor="@color/default_black_color"
                android:background="@drawable/travel_behavior_not_click" />
        </TableRow>

        <TextView
            android:text="每天游玩时间区间"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_black_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <com.crystal.crystalrangeseekbar.widgets.CrystalRangeSeekbar
                android:id="@+id/play_time"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:min_value="0"
                app:max_value="24"/>

            <TextView
                android:id="@+id/play_time_start"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0"
                android:layout_above="@id/play_time"
                android:textSize="16dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/play_time_end"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="24"
                android:layout_above="@id/play_time"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:text="房间数量要求"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_black_color" />

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="60dp">

            <com.crystal.crystalrangeseekbar.widgets.CrystalSeekbar
                android:id="@+id/room_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                app:min_value="1"
                app:max_value="6"/>

            <TextView
                android:id="@+id/room_min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:background="#654321"
                android:layout_above="@id/room_num"
                android:textSize="16dp"
                android:textColor="#000000"/>

            <TextView
                android:id="@+id/room_max"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="6"
                android:background="#654321"
                android:layout_above="@id/room_num"
                android:textSize="16dp"
                android:textColor="#000000"
                android:layout_alignParentRight="true"/>

        </RelativeLayout>

        <TextView
            android:text="酒店位置需求"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/default_black_color" />

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="100dp" >

            <Button
                android:text="靠近市中心"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/near_downtown"
                android:textColor="@color/default_black_color"
                android:background="@drawable/travel_behavior_not_click" />

            <Button
                android:text="靠近景点群"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/near_scenic_spot"
                android:textColor="@color/default_black_color"
                android:background="@drawable/travel_behavior_not_click" />

            <Button
                android:text="交通便利"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:id="@+id/easy_communication"
                android:textColor="@color/travel_menu_bk"
                android:background="@drawable/travel_behavior_click" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="bottom">

        <ImageButton
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/next_step"
            android:id="@+id/play_behavior_next_step" />
    </LinearLayout>

</LinearLayout>